/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Nand(a = sel, b = sel, out = notS);
	Nand(a = notS, b = a, out = nand1);
	Nand(a = sel, b = b, out = nand2);
	Nand(a = nand1, b = nand2, out = out);
}